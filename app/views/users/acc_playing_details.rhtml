  {
        Effect.Appear('other');
  		return false;
		
  }

}

function validate()
{
 if(document.forms[0].account_level_id.value=='other')
 { 
 	var other_level = document.forms[0].other.value
	removeAllOptions(document.forms[0].expense_name);
	addOption(document.forms[0].expense_name, vendor, vendor, "");
